<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Write</title>
  </head>
  <body>
    <% var u,v,content,title; %>
      <div class="container">
        <% if(u===0){%>
    <form action="/users/blog" method="post">
      <div class="row">
        <div class="col-12 col-sm-2 my-2">
          <label for="title">Title</label>
            </div>
      <div class="col-12 col-sm-6 my-2">    
      <input name="title" type="text" class="form-control" id="title" placeholder="Title"  required>
      </div>
      </div>

      <div class="row">
        <div class="col-12 col-sm-2 my-2">
          <label for="content">Write here</label>
            </div>
            <div class="col-12 col-sm-6 my-2">
            <textarea name="content" id="content" class="form-control" rows="12">
            </textarea>
          </div>
      </div>

      <div class="row">
        <div class="offset-sm-2 col-sm-6 my-2">
        <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Post</button>
      </div>
      </div>
      </form>
      <%}%>
        <% if(u===1){%>
    <form action="/users/update/<%=row.id%>" method="post">
      <div class="row">
        <div class="col-12 col-sm-2 my-2">
          <label for="title">Title</label>
            </div>
      <div class="col-12 col-sm-6 my-2">    
      <input name="title" type="text" class="form-control" id="title" placeholder="Title" value="<%=title%>"required>
      </div>
      </div>

      <div class="row">
        <div class="col-12 col-sm-2 my-2">
          <label for="content">Write here</label>
            </div>
            <div class="col-12 col-sm-6 my-2">
            <textarea name="content" id="content" class="form-control" rows="12">
              <%=content%>
            </textarea>
          </div>
      </div>

      <div class="row">
        <div class="offset-sm-2 col-sm-6 my-2">
        <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Post</button>
      </div>
      </div>
      </form>
      <%}%>

    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>